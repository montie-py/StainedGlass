@page

@{
    Layout = "_AdminLayout";
    var aboutUrl = Url.Action("Churches", "Admin");
}

<h2>Church @ViewBag.Church.Slug</h2>

<form action="" method="post" id="editForm" data-slug="@ViewBag.Church.Slug" data-redirect-url="@aboutUrl" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Name</label>
        <input type="text" name="Name" required value="@ViewBag.Church.Name" class="form-control" id="name" placeholder="Name">
    </div>
    <br>
    <div class="form-group">
        <label for="text">Description</label>
        <textarea class="form-control" name="Description" required id="description" rows="6">@ViewBag.Church.Description</textarea>
    </div>
    <div class="form-group">
        <label for="image">Image</label>
        @if (ViewBag.ChurchImage != null)
        {
            <br><img width="150px" src="data:image/jpeg;base64,@ViewBag.ChurchImage" alt="Church @ViewBag.Church.Name Image" /><br/>
        }
        <input type="file" name="Image" accept=".jpg, .jpeg" class="form-control-file" id="image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>