@page
@model IndexModel
@{
    ViewData["Title"] = "Sanctuary Map";
}
<div id="mapContent" class="inline-block">
    <div class="inline-block relative" id="map">
        <img src="@Url.Content("../img/sanctuary_map.png")" alt="Sanctuary Map" class="w-full">
        <div
            class="absolute flex items-center justify-center 
                text-2xl cursor-pointer font-bold border-4 border-black side 
                rounded w-[15%] h-[8%] bottom-[10%] left-[40%]"
            data-type="south">
            S
        </div>
        <div
            class="absolute flex items-center justify-center 
                text-2xl cursor-pointer font-bold border-4 border-black side 
                rounded w-[15%] h-[8%] top-[5%] left-[42%]"
            data-type="north">
            N
        </div>
        <div
            class="absolute flex items-center justify-center 
                text-2xl cursor-pointer font-bold border-4 border-black side 
                rounded w-[15%] h-[8%] left-[10%] top-[27%]"
            data-type="west">
            W
        </div>
        <div
            class="absolute flex items-center justify-center 
                text-2xl cursor-pointer font-bold border-4 border-black side 
                rounded w-[15%] h-[8%] right-[12%] top-[27%]"
            data-type="east">
            E
        </div>
    </div>

    <div id="north" class="relative">
        <div id="choir_loft" class="border rounded text-center cursor-pointer w-3/4">
            <div class="flex items-center justify-center">
                <img src="@Url.Content("../img/north/choir_loft.png")" alt="choir loft image" class="w-3/4">
            </div>
            <span>Choir Loft</span>
        </div>
    </div>
</div>
